---
layout: layouts/base.njk
navId: articles
---

{% block body %}
  <div class="heading">
    <div class="heading-measure">
      <h1 class="heading-title">{{title}}</h1>
      <p class="heading-text article-date">{{ date | date }}</p>
    </div>
  </div>
  <div class="content">
    <div class="content-measure">
      <div class="content-indent">
        {{ content | safe }}
      </div>
    </div>
  </div>
{% endblock %}
